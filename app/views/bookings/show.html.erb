<div class="container card mb-3 p-3 card" style="max-width: 800px;">
  <div class="row g-0">
    <div class="col-md-4">
    <%= image_tag ("http://loremflickr.com/280/280/#{@booking.car.car_brand}#{@booking.car.car_model}"), class: "img-fluid rounded-start"%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><strong><%= @booking.car.car_model.capitalize %></strong></h5>
        <p class="card-text">owned by : <strong><%=@booking.car.user.username%></strong></p>
        <p class="card-text">reserved by : <strong><%=@booking.user.username%></strong></p>
        <p class="card-text">starts: <strong><%=@booking.starting_date%></strong></p>
        <p class="card-text">ends : <strong><%=@booking.ending_date%></strong></p>
        <p class="card-text">Total : <strong><%=@booking.booking_amount%> euros</strong></p>
        <%= link_to "Delete my reservation", booking_path(@booking), data: {turbo_method: :delete, turbo_confirm: "Delete this car ?"}, class: 'btn btn-danger' %>
        <p class="card-text mt-3"></p>
      </div>
    </div>
  </div>
</div>
