<div class="container-fluid mt-3" >
  <div class="card-car gap-3">
    <% @cars.each do |car| %>
      <div class="card rounded-4 rounded border border-2 border-black-subtitle col-sm-12" style="background-color: #ffffff;">
        <%= link_to car_path(car) do %>
          <div class="card-body" >
            <p>
              <% if car.photo.attached? %>
                <%= cl_image_tag car.photo.key, crop: :fill %>
              <% else %>
                <%= image_tag ("http://loremflickr.com/280/280/#{car.car_brand}#{car.car_model}"), class: "card-img-top", style: 'width: 400px' %>
              <% end %>
            <p>
              <strong>
                <%= car.car_brand %>
                <%= car.car_model %>
              </strong>
            </p>
            <p>
              <%= car.price %>â‚¬/jour
            </p>
            <p>
              <em>
                (<%= car.user.username %>)
              </em>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
