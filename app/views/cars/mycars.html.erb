<div class="container-fluid mt-2">
  <div class="card-car gap-3">

    <% @usercars.each do |car| %>
      <div class="card rounded-4 rounded border border-2 border-black-subtitle" style="background-color: #ffffff;">
        <%= link_to car_path(car) do %>
          <div class="card-body">
            <p>
              <% if car.photo.attached? %>
                <%= cl_image_tag car.photo.key, height: 300, width: 400, crop: :fill %>
              <% else %>
                <%= image_tag ("http://loremflickr.com/280/280/#{car.car_brand}#{car.car_model}"), class: "card-img-top", style: 'width: 400px' %>
              <% end %>
            </p>
            <p>
              <strong>
                <%= car.car_brand %>
                <%= car.car_model %>
              </strong>
            </p>
            <p>
              <%= car.price %>â‚¬/day
            </p>
            <div class="button">
              <p><%= link_to "Details", car_path(car) %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

  </div>
  <div class="card rounded-4 my-2 rounded border border-2 border-black-subtitle p-1" style="background-color: #ffffff;">
    <%= link_to new_car_path do %>
      <i class="fa-solid fa-plus"></i> Add a car
    <% end %>
  </div>
</div>
