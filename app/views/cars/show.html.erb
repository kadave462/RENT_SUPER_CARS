<div class="container border m-3 p-3 card">
  <h1>
    <%= @car.car_brand%>
    <%= @car.car_model %>
  </h1>

  <% if @car.photo.attached? %>
      <%= cl_image_tag @car.photo.key, crop: :fill, style: 'object-fit: cover;' %>
  <% else %>
    <%= image_tag ("http://loremflickr.com/280/280/#{@car.car_brand}#{@car.car_model}"), class: "card-img-top", style: 'width: 400px' %>
  <% end %>

    <div mt-2>
      <p><strong><%= @car.price%>â‚¬ /jour</strong></p>
      <p><strong><%= @car.horse_power%> hp</strong></p>

    </div>
  <div class ="d-flex mt-1">
    <%if @car.user == current_user %>
      <div class = "button">
      <%= link_to "Edit my car", edit_car_path%>
      </div>
      <div class = button-delete>
      <%= link_to "Delete my car", car_path(@car),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </div>
    <%end%>
  </div>

</div>

<% if user_signed_in? %>
  <% if current_user.id != @car.user_id %>
    <div data-controller="toggle" class="container card border m-3 p-3">
      <button data-action="click->toggle#fire" class="btn btn-outline-primary">Reserve this car</button>
      <div  data-toggle-target="togglableElement" class="d-none">
        <%= render "bookings/form" %>
      </div>
    </div>
  <% end %>
<% end %>

